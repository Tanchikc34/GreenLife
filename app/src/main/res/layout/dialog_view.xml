<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/customization_layout">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Анемона"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:fontFamily="@font/font1"
        android:gravity="center_horizontal" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:background="@drawable/customization_lin"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:fontFamily="@font/font1"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Ветреница, Ветряница, или Анемона — род многолетних травянистых цветковых растений семейства Лютиковые, включает около 170 видов." />

</LinearLayout>